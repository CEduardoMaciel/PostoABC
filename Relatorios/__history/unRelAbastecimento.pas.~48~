unit unRelAbastecimento;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, RLReport, DB;

type
  TfmRelAbastecimento = class(TForm)
    rlAbastecimento: TRLReport;
    RLBand1: TRLBand;
    RLSystemInfo1: TRLSystemInfo;
    RLSystemInfo2: TRLSystemInfo;
    RLLabel1: TRLLabel;
    dsRelatorio: TDataSource;
    RLGroup1: TRLGroup;
    RLBand5: TRLBand;
    RLDBText4: TRLDBText;
    RLBand3: TRLBand;
    rldbAbastecimento: TRLDBText;
    rldbTanque: TRLDBText;
    rldbBomba: TRLDBText;
    rldbValor: TRLDBText;
    rldbImpostos: TRLDBText;
    RLBand2: TRLBand;
    RLLabel3: TRLLabel;
    RLBand6: TRLBand;
    RLLabel8: TRLLabel;
    RLLabel10: TRLLabel;
    RLLabel11: TRLLabel;
    RLLabel12: TRLLabel;
    RLLabel13: TRLLabel;
    RLBand4: TRLBand;
    RLLabel2: TRLLabel;
    RLBand7: TRLBand;
    RLLabel4: TRLLabel;
    lbValorTotal: TRLLabel;
    lbImpostosTotal: TRLLabel;
    lbValorTotalGeral: TRLLabel;
    lbImpostosTotalGeral: TRLLabel;
    procedure ExibirRelatorio(Sender: TObject);
    procedure AposImprimir(Sender: TObject);
    procedure lbValorTotalBeforePrint(Sender: TObject; var AText: string;
      var PrintIt: Boolean);
    procedure lbImpostosTotalBeforePrint(Sender: TObject; var AText: string;
      var PrintIt: Boolean);
    procedure RLGroup1BeforePrint(Sender: TObject; var PrintIt: Boolean);
  private
    FValorTotal,
    FValorTotalGeral,
    FImpostosTotal,
    FImpostosTotalGeral: Extended;
    { Private declarations }
  public
    { Public declarations }
  end;

var
  fmRelAbastecimento: TfmRelAbastecimento;

implementation

uses
  dmConexao;
{$R *.dfm}

procedure TfmRelAbastecimento.AposImprimir(Sender: TObject);
begin
  FValorTotal := FValorTotal + dsRelatorio.DataSet.FieldByName('VALOR_TOTAL').AsFloat;
  FImpostosTotal := FImpostosTotal + dsRelatorio.DataSet.FieldByName('IMPOSTO').AsFloat;
end;

procedure TfmRelAbastecimento.ExibirRelatorio(Sender: TObject);
begin
  if Conexao.sqRelatorio.Active then
    Conexao.sqRelatorio.Close;
  Conexao.sqRelatorio.Open;
  Conexao.cdsRelatorio.Close;
  Conexao.cdsRelatorio.Open;

  dsRelatorio.DataSet := Conexao.cdsRelatorio;
  rlAbastecimento.Preview();
end;

procedure TfmRelAbastecimento.lbImpostosTotalBeforePrint(Sender: TObject;
  var AText: string; var PrintIt: Boolean);
begin
  AText := FormatFloat(',0.00', FImpostosTotal);
end;

procedure TfmRelAbastecimento.lbValorTotalBeforePrint(Sender: TObject;
  var AText: string; var PrintIt: Boolean);
begin
  AText := FormatFloat(',0.00', FValorTotal);
end;

procedure TfmRelAbastecimento.RLGroup1BeforePrint(Sender: TObject;
  var PrintIt: Boolean);
begin
  FValorTotal := 0;
  FImpostosTotal := 0;
end;

end.
