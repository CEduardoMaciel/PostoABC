unit unTipos;

interface

type
  TEstadosDaRotina = (erNone, erInclusao, erAlteracao);

uses
  Dialogs;

function Perguntar(const Mensagem: string): Boolean;

implementation

function Pergunta(const Mensagem: string): Boolean;
begin
  Result := MessageDlg(Mensagem, mtConfirmation, [mbYes, mbNo], 0) = mrYes;
end;

end.
